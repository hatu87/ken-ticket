<%= form_for @event, url: url, method: method do |f| %>
<fieldset class="form-group">
  <label>Name</label>
  <%= f.text_field :name, class: 'form-control' %>
</fieldset>
<fieldset class="form-group">
  <label>Description</label>
  <%= f.text_area :extended_html_description, class: 'form-control' %>
</fieldset>
<fieldset class="form-group">
  <label>Starts At</label>
  <%= f.datetime_field :starts_at, class: 'form-control' %>
</fieldset>
<fieldset class="form-group">
  <label>Ends At</label>
  <%= f.datetime_field :ends_at, class: 'form-control' %>
</fieldset>
<fieldset class="form-group">
  <label>Category</label>
  <%= f.select :category_id, options_from_collection_for_select(Category.all, :id, :name), {}, {class: 'form-control'}  %>
</fieldset>
<fieldset class="form-group">
  <label>Venue</label>
  <%= f.select :venue_id, options_from_collection_for_select(Venue.all, :id, :name), {}, {class: 'form-control'}  %>
</fieldset>
<%= f.submit 'Save', class:'btn btn-primary' %>
<% if is_edit %>

<%= link_to 'Publish', publish_user_event_path(@event.id), method: :post, class: "btn btn-info  #{class_for_publish_button(@event)} " %>
<% end %>
<% end %>
