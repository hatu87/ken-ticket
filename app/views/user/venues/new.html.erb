<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2 class="display-4">Create Venue</h2>
      <%= form_for @venue, url: user_venues_path, method: :post do |f| %>
      <fieldset class="form-group">
        <label>Name</label>
        <%= f.text_field :name, class: 'form-control' %>
      </fieldset>
      <fieldset class="form-group">
        <label>Address</label>
        <%= f.text_field :full_address, class: 'form-control' %>
      </fieldset>
      <fieldset class="form-group">
        <label>Region</label>
        <%= f.select :region_id, options_from_collection_for_select(Region.all, :id, :name), {}, {class: 'form-control'}  %>
      </fieldset>
      <%= f.submit 'Save', class:'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
